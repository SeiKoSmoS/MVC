@model IEnumerable<WebAppEnterprise.Budget>

@{
    ViewData["Title"] = "Index";
}

    <div class="container">
        <div class="row">
            <div class="col-9">
                <h2 class="text-info">Budget</h2>
            </div>
            <div class="col-3">
                <p>
                    <a class="btn btn-info form-control" asp-action="Create">Create New</a>
                </p>
            </div>
        </div>        
        <a asp-controller="Home" asp-action="Index">Back to List</a>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.AmountOfBudget)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.AmountOfBudget)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>